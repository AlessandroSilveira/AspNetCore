@model IEnumerable<AspNetCore.Mvc.Models.PessoaModel>

<h3>@ViewData["Title"]</h3>


<form asp-action="Index">
    <div class="form-horizontal">
        @Html.ActionLink("Novo Registro", "Create", "Pessoa")
        <hr />

        <div class="x_content">
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                <th>
                    Ações
                </th>
                <th>
                    Pessoa Id
                </th>
                <th>
                    Nome
                </th>

                </tr>
                </thead>
                <tbody>
                    @Html.AntiForgeryToken()

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Editar", "Edit", "Produto", new { @id = item.PessoaId })

                                @Html.ActionLink("Deletar", "Delete", "Produto", new { @id = item.PessoaId })
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PessoaId)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>

                        </tr>
                    }

                </tbody>

            </table>
        </div>

    </div>

</form>